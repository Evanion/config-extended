{
  "name": "@evanion/config-extended",
  "version": "1.0.3",
  "description": "based on feathers-configuration and uses node-config as base",
  "main": "dist/config.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "babel --ignore **__mocks__/*.js,**__tests__/*.js -d ./dist ./src -s",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "prettier-watch": "onchange '**/*.js' -- prettier --write {{changed}}",
    "test": "jest --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Evanion/config-extended.git"
  },
  "keywords": [
    "config"
  ],
  "author": "Mikael Pettersson <evanion@icloud.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Evanion/config-extended/issues"
  },
  "homepage": "https://github.com/Evanion/config-extended#readme",
  "babel": {
    "presets": [
      "es2015",
      "flow"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-imports"
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverage": true
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "config": "^1.30.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-imports": "^1.5.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "config": "^1.30.0",
    "eslint": "^5.0.1",
    "eslint-plugin-jest": "^21.15.1",
    "husky": "^1.0.0",
    "istanbul-api": "1.2.2",
    "istanbul-reports": "1.1.4",
    "jest": "^23.4.1",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1"
  }
}
